{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build [Solution]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.sln"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [Solution, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.sln",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore/SonghayCore.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore/SonghayCore.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [SonghayCore.Tests]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal",
                "/p:CollectCoverage=true"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.Tests, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [SonghayCore.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.xUnit]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.xUnit/SonghayCore.xUnit.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.xUnit, Release]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.xUnit/SonghayCore.xUnit.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack SonghayCore",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "SonghayCore.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/SonghayCore"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack SonghayCore.xUnit",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "SonghayCore.xUnit.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/SonghayCore.xUnit"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "wyam",
            "label": "wyam",
            "isBackground": false,
            "type": "shell",
            "args": [
                "build",
                "--output",
                "./docs"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "wyam: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        }
    ]
}
