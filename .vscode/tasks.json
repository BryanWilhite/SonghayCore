{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build [SonghayCore]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore/SonghayCore.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore, Release]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore/SonghayCore.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.MSTest]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.MSTest/SonghayCore.MSTest.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.MSTest, Release]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.MSTest/SonghayCore.MSTest.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.Tests]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.Tests, Release]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "test [SonghayCore.Tests, filtered by selected text]",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "test",
                "${workspaceFolder}/SonghayCore.Tests/SonghayCore.Tests.csproj",
                "--filter:${selectedText}",
                "--logger:trx",
                "--results-directory:${workspaceFolder}/TestResults",
                "--verbosity:normal"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.xUnit]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.xUnit/SonghayCore.xUnit.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build [SonghayCore.xUnit, Release]",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/SonghayCore.xUnit/SonghayCore.xUnit.csproj",
                "--configuration",
                "Release"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack SonghayCore",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "SonghayCore.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/SonghayCore"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack SonghayCore.MSTest",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "SonghayCore.MSTest.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/SonghayCore.MSTest"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "command": "nuget",
            "label": "NuGet pack SonghayCore.xUnit",
            "isBackground": false,
            "type": "shell",
            "args": [
                "pack",
                "SonghayCore.xUnit.nuspec",
                "-Verbosity",
                "detailed"
            ],
            "options": {
                "cwd": "${workspaceRoot}/SonghayCore.xUnit"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "DocFX: build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docfx",
            "args": [
                "docfx.json"
            ],
            "problemMatcher": []
        },
        {
            "label": "DocFX: serve",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "docfx",
            "args": [
                "serve",
                "docs"
            ],
            "problemMatcher": []
        },
        {
            "label": "DocFX: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        }
    ]
}