        {
            "command": "wyam",
            "label": "wyam",
            "isBackground": false,
            "type": "shell",
            "args": [
                "build",
                "--output",
                "./docs"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "wyam: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "wyam: copy source code to /src",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "cp",
                "args": [
                    "--recursive"
                ]
            },
            "windows": {
                "command": "Copy-Item",
                "args": [
                    "-Path",
                    ".\\SonghayCore\\,.\\SonghayCore.MSTest\\,.\\SonghayCore.xUnit\\",
                    "-Recurse",
                    "-Destination",
                    ".\\src"
                ]
            },
            "problemMatcher": []
        },
        {
            "label": "wyam: delete /src folder",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "linux": {
                "command": "rm",
                "args": [
                    "-r",
                    "/src"
                ]
            },
            "windows": {
                "command": "Remove-Item",
                "args": [
                    "-Path",
                    ".\\src",
                    "-Recurse"
                ]
            },
            "problemMatcher": []
        }
    ]
