{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../SonghayCore",
                    "files": [
                        "**/*.csproj"
                    ]
                },
                {
                    "src": "../SonghayCore.xUnit",
                    "files": [
                        "**/*.csproj"
                    ]
                }
            ],
            "noRestore": true
        }
    ],
    "build": {
        "globalMetadata": {
            "_appName": "SonghayCore",
            "_appTitle": "SonghayCore API",
            "_enableSearch": true,
            "pdf": false
        },
        "content": [
            {
                "files": [
                    "**/*.{md}"
                ]
            }
        ],
        "output": "./latest",
        "resource": [],
        "template": [
            "default",
            "modern"
        ]
    }
}
